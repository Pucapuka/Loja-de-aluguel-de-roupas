{
  "name": "loja-aluguel-roupas",
  "version": "1.0.0",
  "description": "Aplicativo desktop de aluguel de roupas (Electron + React + Express + SQLite)",
  "main": "electron.js",
  "scripts": {
    "start": "npx electron --no-sandbox electron.js", 
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "dev:electron": "npx electron --no-sandbox electron.js",
    "dev:server": "node backend/server.js",
    "prebuild": "npx tailwindcss -i ./src/input.css -o ./public/output.css --minify && cp src/index.html public/index.html",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/output.css --minify",
    "instalar": "./criar-pacote.sh && sudo dpkg -i loja-roupas_1.0.3_all.deb"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron": "^39.2.3",
    "express": "^4.19.2",
    "git": "^0.1.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.5",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-react": "^7.25.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.5",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "postcss-nesting": "^13.0.2",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.18",
    "wait-on": "^7.2.0",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
